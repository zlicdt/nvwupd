<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NvwUpd.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NvwUpd"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    Title="NVIDIA Driver Updater">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar" Grid.Row="0" Background="Transparent" Padding="24,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <FontIcon Glyph="&#xE7FC;" FontSize="16" Margin="0,0,0,0"/>
            <TextBlock Grid.Column="1" Text="NVIDIA Driver Updater" 
                       VerticalAlignment="Center" Margin="8,0,0,0"
                       Style="{StaticResource CaptionTextBlockStyle}"/>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Padding="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Spacing="8">
                    <TextBlock x:Name="MainTitleText" Text="NVIDIA 驱动更新工具" 
                               Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock x:Name="StatusText" 
                               Text="正在检测 GPU 信息..." 
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
                <Button x:Name="SettingsButton" Grid.Column="1" Content="设置"
                        VerticalAlignment="Top" HorizontalAlignment="Right"
                        Click="SettingsButton_Click"/>
            </Grid>

            <!-- GPU Info Card -->
                <Border Grid.Row="1" Margin="0,24,0,0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="GpuInfoTitle" Text="显卡信息" 
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Grid.ColumnSpan="2" Margin="0,0,0,12"/>

                    <TextBlock x:Name="GpuLabel" Grid.Row="1" Text="GPU:" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="GpuNameText" Grid.Row="1" Grid.Column="1" 
                               Text="检测中..." HorizontalAlignment="Right"/>

                    <TextBlock x:Name="CurrentVersionLabel" Grid.Row="2" Text="当前驱动版本:" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
                    <TextBlock x:Name="CurrentVersionText" Grid.Row="2" Grid.Column="1" 
                               Text="--" HorizontalAlignment="Right"
                               Margin="0,4,0,0"/>
                </Grid>
            </Border>

            <!-- Update Info (hidden by default) -->
            <StackPanel Grid.Row="2" Spacing="16">
                <Border x:Name="UpdateCard" Margin="0,24,0,0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Visibility="Collapsed">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE896;" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock x:Name="NewVersionAvailableText" Text="发现新版本驱动！" 
                                       Style="{StaticResource SubtitleTextBlockStyle}"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:Name="LatestVersionLabel" Text="最新版本:" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="LatestVersionText" Grid.Column="1" 
                                       Text="--" FontWeight="SemiBold"
                                       Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>

                            <TextBlock x:Name="ReleaseDateLabel" Grid.Row="1" Text="发布日期:" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                            <TextBlock x:Name="ReleaseDateText" Grid.Row="1" Grid.Column="1" 
                                       Text="--" Margin="0,4,0,0"/>
                        </Grid>

                        <!-- Driver Type Selection -->
                        <TextBlock x:Name="SelectDriverTypeText" Text="选择驱动类型" 
                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                   Margin="0,8,0,0"/>

                        <controls:RadioButtons x:Name="DriverTypeSelector">
                            <RadioButton x:Name="GameReadyRadio" IsChecked="True">
                                <StackPanel>
                                    <TextBlock x:Name="GameReadyDriverText" Text="Game Ready Driver (推荐)" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="GameReadyDescriptionText" Text="针对最新游戏优化，提供最佳游戏体验" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </RadioButton>
                            <RadioButton x:Name="StudioRadio">
                                <StackPanel>
                                    <TextBlock x:Name="StudioDriverText" Text="Studio Driver" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="StudioDescriptionText" Text="针对创意应用优化，提供更稳定的工作环境" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </RadioButton>
                        </controls:RadioButtons>

                        <!-- Download Progress Section -->
                        <StackPanel x:Name="DownloadProgressPanel" Spacing="8" 
                                    Margin="0,12,0,0" Visibility="Collapsed">
                            <TextBlock x:Name="DownloadProgressText" Text="下载进度" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <ProgressBar x:Name="DownloadProgressBar" 
                                         Minimum="0" Maximum="100" Value="0"
                                         Height="8" CornerRadius="4"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="DownloadPercentText" Text="0%"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="1" x:Name="DownloadPathText" 
                                           Text="" TextTrimming="CharacterEllipsis"
                                           HorizontalAlignment="Right"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           ToolTipService.ToolTip="{Binding Text, ElementName=DownloadPathText}"/>
                            </Grid>
                            <Button x:Name="DownloadControlButton" Content="中断下载"
                                    HorizontalAlignment="Right" Visibility="Collapsed"
                                    Click="DownloadControlButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,24,0,0"
                            HorizontalAlignment="Right" Spacing="8">
                    <Button x:Name="CheckUpdateButton" Content="检查更新" 
                            Click="CheckUpdateButton_Click"/>
                    <Button x:Name="UpdateButton" Content="立即更新" 
                            Style="{StaticResource AccentButtonStyle}"
                            Click="UpdateButton_Click"
                            IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        </ScrollViewer>
    </Grid>
</Window>
